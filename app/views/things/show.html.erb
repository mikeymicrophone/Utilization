<p id="notice"><%= notice %></p>

<h1><%= @thing.name %></h1>

<div id='actions'>
  <% if current_user %>
    <% if current_user.appreciates?(@thing) %>
      <span>You appreciate this.</span>
    <% else %>
      <%= link_to 'I appreciate this!', appreciations_path(:appreciation => {:user_id => current_user.id, :thing_id => @thing.id}), :method => :post, :remote => true, :id => 'appreciate_link', :class => 'action' %>
    <% end %>

    <% if current_user.possesses?(@thing) %>
      <span>You possess this.</span>
    <% else %>
      <%= link_to 'I possess this.', possessions_path(:possession => {:user_id => current_user.id, :thing_id => @thing.id}), :method => :post, :remote => true, :id => 'possess_link', :class => 'action' %>
    <% end %>
  
    <% if current_user.aspires_to_use?(@thing) %>
     <span>You would like to use this.</span>
    <% else %>
      <%= link_to 'I want to use this.', aspirations_path(:aspiration => {:user_id => current_user.id, :thing_id => @thing.id}), :method => :post, :remote => true, :id => 'aspire_link', :class => 'action' %>
    <% end %>
    
    <% if current_user.is_expert_on?(@thing) %>
     <span>You know how to use this.</span>
    <% else %>
      <%= link_to 'I know how to use this.', expertises_path(:expertise => {:user_id => current_user.id, :thing_id => @thing.id}), :method => :post, :remote => true, :id => 'expertise_link', :class => 'action' %>
    <% end %>
    
  <% end %>
</div>

<div class='rollup'>
	<label>You're not alone</label>
	<ul>
		<li><%= link_to(pluralize(@thing.appreciations.count, 'person') + (@thing.appreciations.count == 1 ? ' appreciates' : ' appreciate') + ' this.', appreciators_thing_path(@thing)) %></li>
		<li><%= link_to(pluralize(@thing.possessions.count, 'person') + (@thing.possessions.count == 1 ? ' has' : ' have') + ' one.', owners_thing_path(@thing)) %></li>
		<li><%= link_to(pluralize(@thing.aspirations.count, 'person') + ' would like to use it.', aspiring_users_thing_path(@thing)) %></li>
		<li><%= link_to(pluralize(@thing.expertises.count, 'person') + (@thing.possessions.count == 1 ? ' knows' : ' know') + ' how to use this.', experts_thing_path(@thing)) %></li>
	</ul>
</div>		

<p>
  <%= @thing.make if @thing.make.present? %>
</p>
<p>
  <%= image_tag @thing.photo_url if @thing.photo_url.present? %>
</p>
<p>
  <%= link_to @thing.url, @thing.url if @thing.url.present? %>
</p>
<hr>
<p>
  <%= @thing.description %>
</p>

<% if @thing.details.present? %>
  <ul>
    <% @thing.characteristics.each do |characteristic| %>
      <li>
        <%= characteristic.detail.text %>
        <%= link_to pluralize(Patronage.where(:characteristic_id => characteristic).count, 'person') + (Patronage.where(:characteristic_id => characteristic).count == 1 ? ' thinks' : ' think') + ' so.', patrons_characteristic_path(characteristic) %>
        <%= link_to "and I agree!", patronages_path(:patronage => {:characteristic_id => characteristic.id, :user_id => current_user.id}), :method => :post, :remote => true unless !current_user || Patronage.where(:user_id => current_user.id, :characteristic_id => characteristic.id).present? %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= link_to "Edit #{@thing.name}", edit_thing_path(@thing) if @thing.user == current_user %>

<%= content_for :fb_og_meta_tags do %> 
  <meta property="og:type" content="<%= Facebooker2.instance_variable_get('@namespace') %>:thing" /> 
  <meta property="og:title" content="<%= @thing.name %>" /> 
  <meta property="og:image" content="<%= @thing.photo_url.present? ? @thing.photo_url : 'http://school.discoveryeducation.com/clipart/images/backpack.gif'%>" /> 
  <meta property="og:description" content="<%= @thing.description.present? ? @thing.description : @thing.name %>" />
  <meta property="og:url" content="<%= thing_url @thing %>">
<% end %>